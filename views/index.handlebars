<h1>Movies To Watch</h1>

<ul>
    {{#each burgers}}
    <li>
        <p>{{this.id}}. {{this.burger_name}}
            <form action="/delete?_mothod=DELETE" method="POST">
            <input type="hidden" name="id" value="{{this.id}}">
            <button type="submit">DELETE</button>
            </form>
        </p>
    </li>
    {{/each}}
</ul>

<h2>Burger to Eat</h2>
<form method="POST" action="/create">
    <textarea typ="text" name="burger_name" placeholder="What would you like to watch?"></textarea>
    <button type="submit">Order Burger</button>
</form>

<h2> Update a Movie</h2>
<form method="POST" action="/update?_method=PUT">
{{!-- Have to use the method in order to use the put method in HTML --}}
    <input type="text" name="id" placeholder="id">
    <textarea type="text" name="burger_name" placeholder="What do you want to update this movie to?"></textarea>
    <button type="submit">UPDATE MOVIE</button>
</form>